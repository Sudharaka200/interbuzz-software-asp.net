@model Interbuzz_software.Models.BlogModel

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete the blog titled: <strong>@Model.Title</strong>?</p>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>
