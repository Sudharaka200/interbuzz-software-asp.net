@model IEnumerable<Interbuzz_software.Models.BlogModel>


<div class="container">
    <h1 class="text-center text-white">Dashboard</h1>

    <!-- Blog Section -->
    <div>
        <h2 class="text-white">Blog</h2>
        <a asp-action="CreateBlog" class="btn btn-primary">Add New Blog</a>
        <table class="table text-white">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {

                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>
                                @if (!string.IsNullOrEmpty(item.BlogImagePath))
                                {
                                    <img src="@item.BlogImagePath" alt="Blog Image" width="150" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }

                            </td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Date</td>
                            <td>
                                <a asp-action="EditBlog" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        
                    }
                }

            </tbody>
        </table>
    </div>
