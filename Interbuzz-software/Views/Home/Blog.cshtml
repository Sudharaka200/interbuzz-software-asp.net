<!-- area 2 -->
<div class="background-colour-right-only">
    <div class="container py-5">
        <div class="row g-4">

            @if (Model != null && Model.Any())
            {
                foreach (var blog in Model)
                {

                    <div class="col-md-4">
                        <div class="blog-card text-white h-100 ">
                            <img src="@(string.IsNullOrEmpty(blog.BlogImagePath) ? "/images/blog-img1.png" : blog.BlogImagePath)" class="card-img-top" alt="Blog Image">
                            <div class="card-body">
                                <small class="text-muted">@blog.Date.ToString("dd MMM yyyy")</small>
                                <h5 class="card-title mt-2">
                                    @blog.Title
                                </h5>
                                <p class="card-text">
                                    @Html.Raw(blog.Description)
                                </p>
                                <a href="@Url.Action("SingleBlog", "Home", new { id = blog.Id })" class="text-decoration-none p1-txt">Read More →</a>
                            </div>
                        </div>
                    </div>

                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-muted">No Blogs Availbale</p>
                </div>
            }

            <!-- Card 1 -->
        </div>
    </div>
</div>
